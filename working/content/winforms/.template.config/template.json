{
  "$schema": "http://json.schemastore.org/template",
  "author": "Dom Sinclair",
  "classifications": ["winforms"],
  "defaultName": "VtlLoggedWinforms",
  "description": "A Windows Forms application that you can pre-configure to use one of a number of selected logging frameworks",
  "identity": "VtlSoftware.Logging.Winforms.Templates.CSharp",
  "name": "VtlSoftware Logged Winforms Application",
  "sourceName": "VtlLoggedWinforms",
  "shortName": "vtlwin",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net6.0-windows",
          "description": "Target net6.0"
        },
        {
          "choice": "net7.0-windows",
          "description": "Target net7.0"
        }
      ],
      "replaces": "{TargetFramework}",
      "defaultValue": "net6.0-windows",
      "displayName": "Target Framework"
    },
    "LangVersion": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Sets the LangVersion property in the created project file",
      "replaces": "{LangVersion}",
      "displayName": "Language version",
      "Choices": [
        {
          "choice": "10.0",
          "description": "Sets the language version to C#10.0"
        },
        {
          "choice": "11.0",
          "description": "Sets the language version to C#11.0"
        }
      ],
      "defaultValue": "10.0"
    },
    "LoggingFramework": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Select the Logging Framework of your choice.",
      "enableQuotelessLiterals": true,
      "Choices": [
        {
          "choice": "Serilog",
          "description": "Adds the Serilog logging framework to the project"
        },
        {
          "choice": "Nlog",
          "description": "Adds the Nlog logging framework to the project"
        }
      ],
      "defaultValue": "Serilog"
    }
  }
}
